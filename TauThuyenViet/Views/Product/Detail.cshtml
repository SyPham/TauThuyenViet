@model Product

<section id="product-detail">
    <aside class="avatar">
        <img class="img-fluid" src="@Model.Avatar"  asp-append-version="true"/>
    </aside>
    <aside class="info">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-6">
                    <h1>
                        @Model.Title
                    </h1>
                    <div>
                        @Html.Raw(Model.Content)
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="product-imagelist-swiper">
                        <div class="swiper-container">
                            <div class="swiper-wrapper">

                                @foreach (var item in Model.ImageList.SplitImages())
                                {
                                    <div class="swiper-slide">
                                        <a href="javascript:void(0)">
                                            <img class="img-fluid" src="@item" />
                                        </a>
                                    </div>
                                }
                            </div>
                            <div class="swiper-pagination"></div>
                            <div class="swiper-button-prev"></div>
                            <div class="swiper-button-next"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </aside>

    <vc:vc-product-related id="@Model.ProductID" cat-id="@Model.ProductCategoryID.Value" take="5"/>
</section>